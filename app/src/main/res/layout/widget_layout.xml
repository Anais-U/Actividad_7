<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundColorTheme1">

    <TextView
        android:id="@+id/widget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_text"
        android:textColor="@color/textColorTheme1"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginVertical="@android:dimen/app_icon_size"/>

    <Button
        android:id="@+id/widget_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:backgroundTint="@color/buttonColorTheme1"
        android:text="@string/widget_button"
        android:textColor="@color/buttonTextColorTheme1"
       />


</LinearLayout>
